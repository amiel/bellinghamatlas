<% hide_status = defined? show_status && !show_status %>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Media Type</th>
			<% unless hide_status %>
  			<th>Status</th>
			<% end %>
			<th>Actions</th>
		</tr>
	</thead>
	
	<tbody>
  <% for submission in submissions %>
    <tr class="<%= submission.media_type %>">
			<td><%= link_to submission.name, cm_admin_submission_path(submission) %></td>
			<td><span class="<%= submission.media_color %>">&bull;</span> <%= submission.media_type %></td>
			<% unless hide_status %>
  			<td><%= 'unapproved' unless submission.approved? %> <%= 'featured' if submission.featured? %></td>
  		<% end %>
			<td>
				<%= link_to 'show/approve', cm_admin_submission_path(submission) %> |
				<%= link_to 'edit', edit_cm_admin_submission_path(submission) %>
			</td>
		</tr>
  <% end %>
	</tbody>
</table>