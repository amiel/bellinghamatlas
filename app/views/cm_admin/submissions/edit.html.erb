
<% semantic_form_for @submission, :url => cm_admin_submission_path(@submission), :html => { :multipart => true } do |f| %>

	<%= f.buttons :commit %>


	<% f.inputs :title => :admin do %>
		<%= f.input :approved, :as => :boolean %>
		<%= f.input :featured %>
	<% end %>



  <% f.inputs :title => :you do %>
    <%= f.input :name %>
    <%= f.input :email %>
  <% end %>
  
  <% f.inputs :title => :location, :id => 'location_latlng' do %>
    <%= f.input :lat, :required => true %>
    <%= f.input :lng, :required => true %>
  <% end %>
  
  <% f.inputs :title => :location, :id => 'location_address' do %>
    <%= f.input :address, :required => true %>
  <% end %>
  
  <% f.inputs :title => :media, :id => 'media_photo' do %>
    <%= f.input :photo %>
  <% end %>
  
  <% f.inputs :title => :media, :id => 'media_video' do %>
    <%= f.input :video_url %>
  <% end %>
  
  <% f.inputs do %>
    <%= f.input :title %>
    <%= f.input :text %>
  <% end %>
  

	<%= f.buttons :commit %>

<% end %>

