<%= include_javascript_from_cdn :jquery %>
<%= sprockets_include_tag 'application' %>

<% if @map then %>
  <%= GMap.header(:host => request.host_with_port) %>
  <%= @map.to_html %>
<% end %>

<% js_var :DEBUG, !Rails.env.production? %>
<% js_var :authenticity_token, form_authenticity_token %>

<%= yield :javascript %>

<%- in_javascript = yield :in_javascript -%>
<%- if in_javascript then -%>
	<script type="text/javascript">
	//<![CDATA[
		<%= in_javascript %>
	//]]>
	</script>
<% end %>

