<% semantic_form_for @admin_session, :url => cm_admin_login_path do |f| %>
  <%= link_to I18n.t(:'cm_admin.admin_sessions.new.reset_password'), new_cm_admin_password_reset_path %>
  <% f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button I18n.t(:'formtastic.actions.admin_session.new') %>
  <% end %>			      
<% end %>
