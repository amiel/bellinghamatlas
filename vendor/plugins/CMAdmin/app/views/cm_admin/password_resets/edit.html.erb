<% title I18n.t(:'cm_admin.password_resets.edit.title') %>
<h1><%= I18n.t(:'cm_admin.password_resets.edit.title') %></h1>

<% semantic_form_for @admin, :url => cm_admin_password_reset_path, :method => :put do |form| %>
	<% form.inputs :title => :reset_password do %>
		<%= form.input :password %>
		<%= form.input :password_confirmation %>
	<% end %>
	
	<% form.buttons do %>
		<%= form.commit_button I18n.t(:'formtastic.actions.update_password') %>
	<% end %>
<% end %>